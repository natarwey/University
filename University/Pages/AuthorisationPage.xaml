<Page x:Class="University.Pages.AuthorisationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:University.Pages"
      mc:Ignorable="d" 
      Title="Авторизация" Height="200" Width="300">

    <Grid Background="White">
        <Label Content="Логин:" HorizontalAlignment="Left" Margin="60,59,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtLogin" HorizontalAlignment="Left" Height="23" Margin="130,60,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Пароль:" HorizontalAlignment="Left" Margin="60,99,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="txtPassword" PasswordChar="❤" HorizontalAlignment="Left" Height="23" Margin="130,100,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnLogin" Content="Войти" HorizontalAlignment="Center" Margin="0,149,0,0" VerticalAlignment="Top" Width="76" Click="btnLogin_Click"/>
        <Button x:Name="createQrBtn" Content="Создать QR" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
                
        <Image x:Name="imageQr" Height="200" Width="200" ></Image>
    </Grid>
</Page>
